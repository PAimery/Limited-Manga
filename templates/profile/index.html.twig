{% extends 'base.html.twig' %}

{% block title %}Hello ProfileController!
{% endblock %}

{% block stylesheets %}
	{{ parent() }}
	{{ encore_entry_link_tags('profile') }}
{% endblock %}

{% block body %}
	<section class="background-profile">
		<div class="container py-5 h-100">
			<div class="row d-flex justify-content-center align-items-center h-100">
				<div class="col col-lg-9 col-xl-7">
					<div class="card">
						<div class="rounded-top text-white d-flex flex-row" style="background-color: #000; height:200px;">
							<div class="ms-4 mt-5 d-flex flex-column" style="width: 150px;">
								<img src="{{ asset('build/images/singer.png') }}" alt="masque" class="img-fluid img-thumbnail mt-4 mb-2" style="width: 150px; z-index: 1">
								<button type="button" class="btn btn-outline-dark BNSuper" data-mdb-ripple-color="dark">
									Modifier
								</button>
							</div>
							<div class="pseudo fs-3 BNSuper ms-3">
								{{ app.user.pseudonym }}
							</div>
						</div>
						<div class="p-4 text-black" style="background-color: #f8f9fa;">
							<div class="d-flex justify-content-end text-center py-1">
								<div>
									<p class="mb-1 fs-5 roboto fw-bolder">253</p>
									<p class="roboto fw-bolder mb-0">Favoris</p>
								</div>
							</div>
						</div>
						<div class="card-body p-4 text-black">
							<div class="mb-5">
								<p class="BNSuper fs-4 mb-1">Info</p>
								<div class="p-4" style="background-color: #f8f9fa;">
									<p class="font-italic mb-1">
										{{ app.user.email }}
									</p>
								</div>
							</div>
							<div class="d-flex justify-content-between align-items-center mb-4">
								<p class="BNSuper fs-4 mb-0">Favoris</p>
								<p class="mb-0">
									<a href="{{ path('universe_index') }}" class="text-decoration-none text-dark fw-bolder roboto fs-6">En ajouter</a>
								</p>
							</div>
							<div class="row g-2">
								<div class="col mb-2">
									<img src="https://mdbcdn.b-cdn.net/img/Photos/Lightbox/Original/img%20(112).webp" alt="image 1" class="w-100 rounded-3">
								</div>
								<div class="col mb-2">
									<img src="https://mdbcdn.b-cdn.net/img/Photos/Lightbox/Original/img%20(107).webp" alt="image 1" class="w-100 rounded-3">
								</div>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</section>
{% endblock %}
