{% extends 'base.html.twig' %}

{% block title %}Univers
{% endblock %}

{% block stylesheets %}
	{{ parent() }}
	{{ encore_entry_link_tags('universe') }}
{% endblock %}

{% block body %}
	<h1 class="text-primary my-5 text-center">Univers</h1>
	<section class="container">
		<div class="row row-cols-5 g-3">
			{% for universe in universes %}
				{# xs sm md lg xl xxl#}
				<div class="col">
					<a role="button" class="" href="{{ path("universe_show", { id: universe.id }) }}">

						<div class="cardUniverse px-2 py-5 d-flex justify-content-center align-items-center rounded-3">
							<img src="{{ universe.image ?? asset('build/images/logoTorii.png') }}" class="card-image w-25" alt=" ...">
						</div>
						<div class="d-flex justify-content-center">
							<a role="button" class="btn BNSuper text-uppercase text-center text-dark p-2 fs-5">{{ universe.title }}</a>
						</div>
					</div>
				</a>
			{% else %}
				Aucun univer trouv√©.
			{% endfor %}
		</div>
	</section>
{% endblock %}
