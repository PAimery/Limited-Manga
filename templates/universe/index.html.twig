{% extends 'base.html.twig' %}

{% block title %}Univers
{% endblock %}

{% block stylesheets %}
	{{ parent() }}
	{{ encore_entry_link_tags('universe') }}
{% endblock %}

{% block body %}
	<h1 class="text-primary my-5 text-center">Univers</h1>
	<section class="container px-5">
		<div class="row g-4">
			{% for universe in universes %}
				{# xs sm md lg xl xxl#}
				<div class="col-sm-6 col-md-4 col-lg-3 col-xxl-2">
					<div class="card p-5 d-flex justify-content-center align-items-center rounded-3">
						<img src="{{ universe.image ?? asset('build/images/Universes/onepiece.png') }}" class="card-image " alt=" ...">
					</div>
					<h2 class="card-title text-uppercase text-dark p-2 text-center fs-5 ">{{ universe.title }}</h2>
				</div>
			{% else %}
				Aucun univer trouv√©.
