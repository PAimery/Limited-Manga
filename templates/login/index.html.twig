{% extends 'base.html.twig' %}

{% block title %}
	Login
{% endblock %}

{% block stylesheets %}
	{{ parent() }}
	{{ encore_entry_link_tags('form') }}
{% endblock %}

{% block body %}
	<section class="container py-4">
		<div class="row d-flex justify-content-center align-items-center">
			<div class="col-12 col-md-8 col-lg-6 col-xl-5">
				<div class="card shadow rounded-2 border border-0 h2 fs-5 bg-light text-dark">
					<div class="position-relative">
						<img src="{{ asset('build/images/city.png') }}" class="img object-fit-cover card-img-top" alt="ville d'anime">
						<img src="{{ asset('build/images/singer.png') }}" class="img-singer w-25 p-2 position-absolute top-100 start-50 translate-middle" alt="masque">
					</div>
					<div class="card-body d-flex flex-column align-items-center p-2">
						<div class="mb-md-5 mt-md-4">
							{% if error %}
								<div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
							{% endif %}
							<form action="{{ path('app_login') }}" method="post">
								<div class="">
									<label for="username" class="form-label">Email</label>
									<div class="input-group">
										<span class="col-2 input-group-text rounded-0 text-light bg-dark border border-dark">
											{% include 'icons/profil.svg' %}
										</span>
										<input type="text" class="border border-5 border-dark input roboto fs-6 fw-bolder form-control form-control-lg text-dark" id="username" name="_username" value="{{ last_username }}">
									</div>
								</div>
								<div class="mb-5">
									<label for="password" class="form-label">Mots de passe</label>
									<div class="input-group">
										<span class="col-2 input-group-text rounded-0 text-light bg-dark border border-dark">
											{% include 'icons/password.svg' %}
										</span>
										<input type="password" class="border border-5 border-dark roboto form-control form-control-lg text-dark" id="password" name="_password">
									</div>
								</div>
								<input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
								<div class="d-flex flex-column align-items-center my-2">
									<button class="btn rounded-1 text-dark border fs-5 border-0 btn-outline-primary btn-lg px-5" type="submit">Login</button>
								</div>
								<div class="d-flex flex-column align-items-center">
									<p class="m-2 roboto fs-6 fw-bolder">Pas de compte ?
										<a href="#" class="h2 text-dark text-decoration-none fs-6">Sign Up</a>
									</p>
								</div>
							</form>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</section>{% endblock %}
